@model Song

@{
    ViewData["Title"] = "Usuwanie utworu";
}

@using (Html.BeginForm("Delete", "Songs", FormMethod.Post))
{
    <h3>Czy na pewno chcesz usunąć poniższy rekord?</h3>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Musician.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Musician.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genre.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genre.FullName)
        </dd>
    </dl>

    <input type="submit" value="Usuń" class="btn btn-danger" />
}